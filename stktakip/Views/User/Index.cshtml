@using stktakip.Models;
@model List<Users>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayaout.cshtml";
}

<h2>Kullanıcılar</h2>

<table id="tblUser" class="table table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>Kullanıcı Id</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>TakmaAdı</th>

        <th>Numara</th>
        <th>EPosta</th>
        <th>SİL</th>
        <th>DÜZENLE</th>

    </tr>
        </thead>
    <tbody>
        @foreach (var usr in Model)
        {
            <tr>
                <td>@usr.UserId</td>
                <td>@usr.Name</td>
                <td>@usr.Surname</td>
                <td>@usr.Nickname</td>

                <td>@usr.Number</td>
                <td>@usr.Email</td>
                <td><a class="btn btn-danger btnKullanicisil" data-id="@usr.UserId">SİL</a></td>
                <td><a href="/User/klngnc/@usr.UserId" class="btn btn-success">DÜZENLE</a></td>

            </tr>



        }



    </tbody>

</table>
<a href="/User/yenikullanici/" class="btn btn-primary">KULLANICI EKLE </a>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.3/b-1.5.6/b-html5-1.5.6/cr-1.5.0/fc-3.2.5/fh-3.1.4/kt-2.5.0/r-2.2.2/rg-1.1.0/rr-1.2.4/sc-2.0.0/sl-1.3.0/datatables.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script>
    $('#tblUser').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });

</script>