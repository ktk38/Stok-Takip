@using stktakip.Models
@model List<ProductStocks>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayaout.cshtml";
}
<h2>Ürün Stokları</h2>
<table class="table table-bordered" id="tblProductStock">
    <thead>
        <tr>
            <th>UrunStokId</th>
            <th>Adet</th>
            <th>Kayıt Tarihi</th>
            <th>Urun Adı</th>
            <th>SİL</th>
            <th>DÜZENLE</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var urnstk in Model)
        {
            <tr>
                <td>@urnstk.UrunStokId</td>
                <td>@urnstk.Piece</td>
                <td>@urnstk.RecordDate</td>
                <td>@urnstk.Products.ProductName</td>
                <td><a class="btn btn-danger btnUrunstoksil" data-id="@urnstk.UrunStokId">SİL</a></td>
                <td><a href="/ProductStock/stokgnc/@urnstk.UrunStokId" class="btn btn-success">DÜZENLE</a></td>
                

            </tr>
        }
    </tbody>
</table>
<a href="/ProductStock/yenistk/" class="btn btn-primary">STOK EKLE </a>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.18/af-2.3.3/b-1.5.6/b-html5-1.5.6/cr-1.5.0/fc-3.2.5/fh-3.1.4/kt-2.5.0/r-2.2.2/rg-1.1.0/rr-1.2.4/sc-2.0.0/sl-1.3.0/datatables.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script> //burada datatable scripti kullanılmıştır
    $('#tblProductStock').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });

</script>