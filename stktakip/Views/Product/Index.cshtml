@using stktakip.Models
@* @using PagedList*@
@* @using PagedList.Mvc*@
@model List<Products>
@{ 
    List<Categories> categories = ViewData["allCategories"] as List<Categories>;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayaout.cshtml";
}

<h2>Urunler</h2>

<table id="tblProduct" class="table table-bordered">
    <thead>
        <tr>
            <th>Urun Id</th>
            <th>UrunAdı</th>
            <th>Markası</th>
            <th>Kategori Adı</th>
            <th>UrunTipi</th>
            <th>Alış Fiyatı</th>
            <th>SİL</th>
            <th>DÜZENLE</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
              
        <tr>
            <td>@urn.ProductId</td>
            <td>@urn.ProductName</td>
            <td>@urn.Brands</td>
            <td>@urn.Categories.CategorieNames</td>
            <td>@urn.ProductType</td>
            <td>@urn.BuyingPrice</td>
            <td><a class="btn btn-danger btnUrunsil" data-id="@urn.ProductId">SİL</a></td>
            <td><a href="/Product/urunguncelle/@urn.ProductId" class="btn btn-success">DÜZENLE</a></td>
            
        </tr>
        }
        
    </tbody>
    </table>
