@using stktakip.Models;
@model List<Categories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayaout.cshtml";
}

<h2>Kategori Listesi</h2>
<table id="tblCategorie" class="table table-bordered">
    <thead>
        <tr>
            <th>Kategori Id</th>
            <th>Kategori Ad</th>
            <th>Açıklama</th>
            <th>SİL</th>
            <th>DÜZENLE</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var ktg in Model)
        {

            <tr>
                <td>@ktg.CategorieId</td>
                <td>@ktg.CategorieNames</td>
                <td>@ktg.Explanation</td>
                <td><a class="btn btn-danger btnKategorisil" data-id="@ktg.CategorieId">SİL</a></td>
                <td><a href="/Categorie/kategorigetir/@ktg.CategorieId" class="btn btn-success">DÜZENLE</a></td>
            </tr>

        }


    </tbody>

</table>
